             !"DD2-SF-RDF1.8-wl_1.2-2_45km_1e-9.bin"
             !"DD2-SF-RDF1.8-wl_1.2-2_45km_linint.bin"
             !"DD2-SF-RDF1.8-wl_1.2-1.8_42km-hr.bin"
             !"DD2-SF-RDF1.8-wl_1.2-1.8_42km-hr-new.bin"
             !"DD2-SF-RDF1.9-wl_1.2-1.2_45km.bin"
             !"DD2-SF-RDF1.9-wl_1.2-2_45km.bin"
!--------------------------------------------------!
! Produce only the SPH ID or only the spacetime ID !
!--------------------------------------------------!
run_sph=.TRUE.
run_spacetime=.FALSE.
!-------------------------------------------------!
! Local paths to the directories to store the SPH !
! and spacetime output files                      !
!-------------------------------------------------!
sph_path="sph-output/"
spacetime_path="spacetime-output/"
!------------------------------------------------------------------!
! Choose how to place particles for each BNS                       !
!   Please specify the details of the particle distribution in the !
!   sphincs_lorene_bns_particles.par parameter file                !
!------------------------------------------------------------------!
placer(1,:)=0                     ! 0: Read particle positions from formatted
!placer(2,:)=1, 2                 !    file
                                  ! 1: Single lattice around stars
                                  ! 2: Two lattices, one around each star
                                  ! 3: Spherical surfaces
!-----------------------------------------------------!
! Choose to export data to binary and formatted files !
!-----------------------------------------------------!
export_bin=.FALSE.                ! Export ID to binary files
export_form=.FALSE.               ! Export ID to formatted files
export_form_xy=.FALSE.  ! Export only the ID on the xy plane to formatted files
export_form_x=.FALSE.   ! Export only the ID on the x axis to formatted files,
                        ! irrespectively on the value of export_form_xy
!----------------------------------------------!
! Choose to compute and export the constraints !
!----------------------------------------------!
compute_constraints=.FALSE.        ! Compute constraints on the gravity grid,
                                   ! without information from the particles

compute_parts_constraints=.TRUE.  ! Compute constraints on the gravity grid,
                                   ! mapping the physical metric to the
                                   ! particles, computing the stress-energy
                                   ! tensor on the particles, and then mapping
                                   ! it to the grid
export_constraints=.TRUE.         ! Export constraints and stress-energy tensor
                                   ! to a formatted file
export_constraints_details=.FALSE. ! Write a formatted file whose rows contain
                                   ! the points at which the constraints
                                   ! have values within (-oo,1D-7], [1D-7,1D-6],
                                   ! [1D-6,1D-5], [1D-5,1D-4], [1D-4,1D-3],
                                   ! [1D-3,1D-2], [1D-2,1D-1], [1D-1,1],
                                   ! [1,1D+1], [1D+1,1D+2], [1D+2,1D+3],
                                   ! [1D+3,+oo)
export_constraints_xy=.TRUE.  ! Export constraints only on the xy plane to
                              ! formatted files
export_constraints_x=.FALSE.   ! Export constraints only on the x axis to
                              ! formatted files, irrespectively of the value of
                              ! export_constraints_xy
constraints_step=1            ! Export the constraints every step-th grid point
!---------------------------------------------------------------!
! Parameters for the convergence test performed by the PROGRAM  !
! convergence_test in file convergence_test.f90                 !
!---------------------------------------------------------------!
numerator_ratio_dx=4.0D0      ! Numerator of ratio_dx
denominator_ratio_dx=3.0D0    ! Denominator of ratio_dx
                              ! ratio_dx > 1 is the ratio between the first and
                              ! second grid step, and between the second and
                              ! third
ref_lev=1                     ! Refinement level over which performing the
                              ! convergence test
!----------------!
! Other features !
!----------------!
! Geodesic gauge
one_lapse=.FALSE.             ! If .TRUE., it sets the lapse equal to 1
zero_shift=.FALSE.             ! If .TRUE., it sets the shift equal to 0
! Show loops progress on screen
show_progress= .FALSE.

/
